extends layout

append content
  if errors
    ul.errorMessage
      each val in errors
        li= val.message
  .form
    h2 Register
    form(action="/users/register", method="post")
      div
        input#username(type="text", name="username", placeholder="Username", required)
      div
        input#password(type="password", name="password", placeholder="Password", required, minlength=6)
      div
        input#password2(type="password", name="password2", placeholder="Confirm password", required, minlength=6)
      div
        input(type="submit", value="Register")
      div 
        a(href="/users/login") Already registered? Login here 